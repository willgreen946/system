# Alt as mod key
set $mod Control 

# Terminal spawn
bindsym $mod+Return exec st

# Vim bindings for switching windows
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Vim bindings to resize windows
bindsym Mod1+h resize shrink width 10 px or 10 ppt
bindsym Mod1+j resize shrink height 10 px or 10 ppt
bindsym Mod1+k resize grow height 10 px or 10 ppt
bindsym Mod1+l resize grow width 10 px or 10 ppt

# My tmux bindings for window managment
bindsym ctrl+alt+v split v
bindsym ctrl+alt+h split h

# 8 workspaces
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8

# Moving programs through windows
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8

# Program bindings
bindsym $mod+d exec dmenu
bindsym $mod+space exec icecat

# Kill window
bindsym $mod+Shift+c kill

# Restart i3
bindsym $mod+Shift+r restart

# Quit i3
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit i3' -b 'exit' 'i3-msg exit'"

# Class				border	background	text	indicator	child_border
client.focused			#00cd00	#00cd00		#ffffff	#00cd00		#00cd00
client.focused_inactive 	#00cd00 #000000		#ffffff #00cd00 	#00cd00
client.unfocused 		#03a062 #000000 	#ffffff #03a062 	#03a062
client.urgent 			#ff0000 #000000 	#ffffff #ff0000 	#000000
client.placeholder 		#000000 #000000 	#ffffff #000000 	#000000
